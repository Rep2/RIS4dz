@model RIS4dz.Models.StockState

@{
    ViewData["Title"] = "Create";
    var stocks = ViewData["StockID"] as SelectList;
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>StockState</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Stock" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="StockID" asp-items="ViewBag.Stocks" class="form-control">
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BuyRate" class="col-md-2 control-label">Buy Rate</label>
            <div class="col-md-10">
                <input asp-for="BuyRate" class="form-control" />
                <span asp-validation-for="BuyRate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SellRate" class="col-md-2 control-label">Sell Rate</label>
            <div class="col-md-10">
                <input asp-for="SellRate" class="form-control" />
                <span asp-validation-for="SellRate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
